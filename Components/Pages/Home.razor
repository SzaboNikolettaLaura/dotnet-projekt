@page "/"

<PageTitle>Országos Vizsgaeredmények</PageTitle>

<style>
    .hero-section {
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: white;
        padding: 4rem 0;
        text-align: center;
    }

    .hero-title {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .features-section {
        padding: 4rem 0;
        background-color: #f8f9fa;
    }

    .feature-card {
        padding: 2rem;
        text-align: center;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .feature-icon {
        font-size: 2.5rem;
        color: #3498db;
        margin-bottom: 1rem;
    }

    .feature-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .feature-description {
        color: #6c757d;
    }

    .footer {
        background-color: #2c3e50;
        color: white;
        padding: 2rem 0;
        text-align: center;
    }

    .stats-section {
        padding: 3rem 0;
        background-color: white;
    }

    .stat-card {
        text-align: center;
        padding: 1.5rem;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #3498db;
    }

    .stat-label {
        color: #6c757d;
        margin-top: 0.5rem;
    }
</style>

<div class="hero-section">
    <div class="container">
        <h1 class="hero-title">Országos Vizsgaeredmények Portál</h1>
        <p class="hero-subtitle">Biztonságosan érheted el vizsgaeredményeidet és statisztikáidat</p>
        <a href="/profile" class="btn btn-light btn-lg">Eredményeim Megtekintése</a>
    </div>
</div>

<div class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-number">10+</div>
                    <div class="stat-label">Év Adatai</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-number">100%</div>
                    <div class="stat-label">Biztonságos Hozzáférés</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Elérhetőség</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-number">1000+</div>
                    <div class="stat-label">Kiszolgált Diák</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">📊</div>
                    <h3 class="feature-title">Részletes Eredmények</h3>
                    <p class="feature-description">Tekintsd meg teljes vizsgaeredményeidet részletes bontásban és statisztikákkal.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">🔒</div>
                    <h3 class="feature-title">Biztonságos Hozzáférés</h3>
                    <p class="feature-description">Eredményeid biztonságos hitelesítéssel és titkosítással védettek.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">📈</div>
                    <h3 class="feature-title">Teljesítményelemzés</h3>
                    <p class="feature-description">Hasonlítsd össze eredményeidet az országos átlagokkal és kövesd fejlődésedet.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="footer">
    <div class="container">
        <p>&copy; 2024 Országos Oktatási Hivatal. Minden jog fenntartva.</p>
    </div>
</div>
